<div class="flex items-center justify-center bg-white rounded-lg p-8 shadow-md">
  <%= form_with(model: category, url: category.persisted? ? category_path(category) : categories_path, local: true) do |form| %>

    <% if category.errors.any? %>
      <div id="error_explanation" class="text-red-600">
        <h2><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</h2>
        <ul>
          <% category.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <h1 class="mb-4 text-lg font-bold"><%= category.persisted? ? "Update Category" : "Create a Category" %></h1>

    <div class="mb-4">
      <%= form.label :name, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.text_field :name, value: category.name, class: "appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>

    <div class="mb-4">
      <%= form.label :description, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.text_area :description, value: category.description, class: "appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>

    <div class="flex justify-center gap-5">
      <%= form.submit category.persisted? ? 'Save' : 'Create', class: 'btn btn-submit rounded-md px-4 py-2 bg-green-500 hover:bg-green-600 text-black hover:cursor-pointer' %>
      
      <% if category.persisted? %>
        <%= link_to "Delete Category", category_path(category), data: {
          turbo_method: :delete,
          turbo_confirm: "Are you sure you want to delete this Category?"
        }, class: 'btn btn-close rounded-md px-4 py-2 bg-red-500 hover:bg-red-600 text-black' %>
      <% end %>
    </div>

  <% end %>

</div>
